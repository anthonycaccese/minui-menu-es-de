<!-- 
16:10 aspect ratio
based on 768x480
-->
<theme>

   <!--
   ///
   All Views
   ///
   -->
   <view name="system,gamelist">
      <image name="background">
         <path>${backgroundPath-16-10}</path>
         <cropPos>${backgroundCropPos-16-10}</cropPos>
      </image>
      <textlist name="item-list">
         <pos>0.059895833333333 0.075</pos><!-- 46 36 -->
         <selectedBackgroundMargins>${selectedBackgroundMargins}</selectedBackgroundMargins>
      </textlist>
      <helpsystem name="
         help-system-view-left,
         help-system-view-right,
         help-gamelist-view-left,
         help-gamelist-view-right
         ">
         <fontSize>${helpsystemFontSize}</fontSize>
         <entrySpacing>0.010416666666667</entrySpacing><!-- 8 -->
         <iconTextSpacing>0.00390625</iconTextSpacing><!-- 3 -->
      </helpsystem>
      <helpsystem name="
         help-system-view-left,
         help-gamelist-view-left">
         <pos>0.04427083 0.904166666666667</pos><!-- 34 434 -->
      </helpsystem>
      <helpsystem name="
         help-system-view-right,
         help-gamelist-view-right">
         <pos>0.95572917 0.904166666666667</pos><!-- 734 434 -->
      </helpsystem>
      <helpsystem name="help-system-view-left">
         <entries>${helpSystemViewEntriesLeft}</entries>
      </helpsystem>
      <helpsystem name="help-system-view-right">
         <entries>${helpSystemViewEntriesRight}</entries>
      </helpsystem>
      <helpsystem name="help-gamelist-view-left">
         <entries>${helpGamelistViewEntriesLeft}</entries>
      </helpsystem>
      <helpsystem name="help-gamelist-view-right">
         <entries>${helpGamelistViewEntriesRight}</entries>
      </helpsystem>
   </view>
   <fontSize name="small,x-small">
      <variables>
         <selectedBackgroundMargins>0.013020833333333 0.013020833333333</selectedBackgroundMargins><!-- 10 -->
         <helpsystemFontSize>0.033333333333333</helpsystemFontSize><!-- 16 -->
         <helpSystemViewEntriesLeft>start,thumbstickclick,x</helpSystemViewEntriesLeft>
         <helpSystemViewEntriesRight>a</helpSystemViewEntriesRight>
         <helpGamelistViewEntriesLeft>back,start,y,thumbstickclick</helpGamelistViewEntriesLeft>
         <helpGamelistViewEntriesRight>a,b,x</helpGamelistViewEntriesRight>
      </variables>
   </fontSize>
   <fontSize name="medium">
      <variables>
         <selectedBackgroundMargins>0.018229166666667 0.018229166666667</selectedBackgroundMargins><!-- 14 -->
         <helpsystemFontSize>0.0375</helpsystemFontSize><!-- 18 -->
         <helpSystemViewEntriesLeft>start,thumbstickclick,x</helpSystemViewEntriesLeft>
         <helpSystemViewEntriesRight>a</helpSystemViewEntriesRight>
         <helpGamelistViewEntriesLeft>back,start,y,thumbstickclick</helpGamelistViewEntriesLeft>
         <helpGamelistViewEntriesRight>a,b,x</helpGamelistViewEntriesRight>
      </variables>
   </fontSize>
   <fontSize name="large,x-large">
      <variables>
         <selectedBackgroundMargins>0.0234375 0.0234375</selectedBackgroundMargins><!-- 18 -->
         <helpsystemFontSize>0.04166667</helpsystemFontSize><!-- 20 -->
         <helpSystemViewEntriesLeft>start,thumbstickclick,x</helpSystemViewEntriesLeft>
         <helpSystemViewEntriesRight>a</helpSystemViewEntriesRight>
         <helpGamelistViewEntriesLeft>back,start,y</helpGamelistViewEntriesLeft>
         <helpGamelistViewEntriesRight>a,b,x</helpGamelistViewEntriesRight>
      </variables>
   </fontSize>

   <!-- Variants: List -->
   <variant name="gamelist-list">
      <view name="system,gamelist">
         <textlist name="item-list">
            <size>0.880208333333333 0.733333333333333</size><!-- 676 352 -->
         </textlist>
      </view>
   </variant>

   <!-- Variants: List + Cover, List + Screenshot -->
   <variant name="
      gamelist-list-cover,
      gamelist-list-screenshot
      ">
      <view name="system">
         <textlist name="item-list">
            <size>0.880208333333333 0.733333333333333</size><!-- 676 352 -->
         </textlist>
      </view>
      <view name="gamelist">
         <textlist name="item-list">
            <size>0.421875 0.733333333333333</size><!-- 324 352 -->
         </textlist>
         <video name="game-art">
            <pos>0.95572917 0.441666666666667</pos><!-- 734 212 -->
         </video>
      </view>
   </variant>

   <!-- Variants: List + Cover -->
   <variant name="gamelist-list-cover">
      <view name="gamelist">
         <video name="game-art">
            <imageMaxSize>0.41927083 0.733333333333333</imageMaxSize><!-- 322 352 -->
            <cropSize>0.41927083 0.733333333333333</cropSize><!-- 322 352 -->
         </video>
      </view>
   </variant>

   <!-- Variants: List + Screenshot -->
   <variant name="gamelist-list-screenshot">
      <view name="gamelist">
         <video name="game-art">
            <cropSize>0.41927083 0.733333333333333</cropSize><!-- 322 352 -->
         </video>
      </view>
   </variant>

</theme>
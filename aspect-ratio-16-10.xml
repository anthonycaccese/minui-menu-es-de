         gamelist
         ">
         <textlist name="
            item-list
            ">
            <size>0.880208333333333 0.733333333333333</size><!-- 676 352 -->
         </textlist>
      </view>
   </variant>
   <variant name="
      gamelist-list-cover,
      gamelist-list-screenshot,
      gamelist-list-titlescreen,
      gamelist-list-physicalmedia
      ">
      <view name="
         gamelist
         ">
         <textlist name="
            item-list
            ">
            <size>0.45052083 0.733333333333333</size><!-- 346 352 -->
         </textlist>
         <video name="
            game-art
            ">
            <pos>0.94010417 0.50625</pos><!-- 722 243 -->

<!-- 
16:10 aspect ratio
based on 768x480
-->
<theme>

   <!--
   ///
   All Views
   ///
   -->
   <view name="
      system,
      gamelist
      ">
      <image name="
         background
         ">
         <path>${backgroundPath-16-10}</path>
         <cropPos>${backgroundCropPos-16-10}</cropPos>
      </image>
      <systemstatus name="
         system-status
         ">
         <pos>0.94010417 0.09166667</pos><!-- 722 44 -->
         <backgroundHorizontalPadding>0.01822917 0.01822917</backgroundHorizontalPadding><!-- 14 14 -->
         <backgroundVerticalPadding>0.01875 0.01875</backgroundVerticalPadding><!-- 9 9 -->
      </systemstatus>
      <textlist name="
         item-list
         ">
         <pos>0.059895833333333 0.075</pos><!-- 46 36 -->
         <selectedBackgroundMargins>0.01822917 0.01822917</selectedBackgroundMargins><!-- 14 -->
      </textlist>
      <helpsystem name="
         help-system-view-left,
         help-system-view-right,
         help-gamelist-view-left,
         help-gamelist-view-right
         ">
         <entrySpacing>0.01822917</entrySpacing><!-- 14 -->
         <iconTextSpacing>0.0078125</iconTextSpacing><!-- 6 -->
         <backgroundHorizontalPadding>0.01302083 0.01953125</backgroundHorizontalPadding><!-- 10 15 -->
         <backgroundVerticalPadding>0.01666667 0.01666667</backgroundVerticalPadding><!-- 8 8 -->
      </helpsystem>
      <helpsystem name="
         help-system-view-left,
         help-gamelist-view-left
         ">
         <pos>0.0546875 0.904166666666667</pos><!-- 42 434 -->
      </helpsystem>
      <helpsystem name="
         help-system-view-right,
         help-gamelist-view-right
         ">
         <pos>0.93880208 0.904166666666667</pos><!-- 721 434 -->
      </helpsystem>
      <helpsystem name="
         help-system-view-left
         ">
         <entries>${helpSystemViewEntriesLeft}</entries>
      </helpsystem>
      <helpsystem name="
         help-system-view-right
         ">
         <entries>${helpSystemViewEntriesRight}</entries>
      </helpsystem>
      <helpsystem name="
         help-gamelist-view-left
         ">
         <entries>${helpGamelistViewEntriesLeft}</entries>
      </helpsystem>
      <helpsystem name="
         help-gamelist-view-right
         ">
         <entries>${helpGamelistViewEntriesRight}</entries>
      </helpsystem>
   </view>
   <fontSize name="
      x-small,
      small
      ">
      <variables>
         <helpSystemViewEntriesLeft>start,thumbstickclick,x</helpSystemViewEntriesLeft>
         <helpSystemViewEntriesRight>a</helpSystemViewEntriesRight>
         <helpGamelistViewEntriesLeft>back,start</helpGamelistViewEntriesLeft>
         <helpGamelistViewEntriesRight>a</helpGamelistViewEntriesRight>
      </variables>
   </fontSize>
   <fontSize name="
      medium
      ">
      <variables>
         <helpSystemViewEntriesLeft>start,thumbstickclick,x</helpSystemViewEntriesLeft>
         <helpSystemViewEntriesRight>a</helpSystemViewEntriesRight>
         <helpGamelistViewEntriesLeft>back,start</helpGamelistViewEntriesLeft>
         <helpGamelistViewEntriesRight>a</helpGamelistViewEntriesRight>
      </variables>
   </fontSize>
   <fontSize name="
      large,
      x-large
      ">
      <variables>
         <helpSystemViewEntriesLeft>start,x</helpSystemViewEntriesLeft>
         <helpSystemViewEntriesRight>a</helpSystemViewEntriesRight>
         <helpGamelistViewEntriesLeft>back,start</helpGamelistViewEntriesLeft>
         <helpGamelistViewEntriesRight>a</helpGamelistViewEntriesRight>
      </variables>
   </fontSize>

   <!--
   ///
   System View
   ///
   -->
   <view name="
      system
      ">
      <textlist name="
         item-list
         ">
         <size>0.880208333333333 0.733333333333333</size><!-- 676 352 -->
      </textlist>
   </view>

   <!--
   ///
   Gamelist View
   ///
   -->
   <variant name="
      gamelist-list
      ">

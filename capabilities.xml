<themeCapabilities>
   
   <themeName>MinUI Menu</themeName>

   <!--
   ///
   Aspect Ratios
   ///
   -->
   <aspectRatio>16:9</aspectRatio>
   <aspectRatio>16:10</aspectRatio>
   <aspectRatio>3:2</aspectRatio>
   <aspectRatio>4:3</aspectRatio>
   <aspectRatio>19.5:9</aspectRatio>
   <aspectRatio>1:1</aspectRatio>

   <!--
   ///
   Font Size
   ///
   -->
   <fontSize>x-small</fontSize>
   <fontSize>small</fontSize>
   <fontSize>medium</fontSize>
   <fontSize>large</fontSize>
   <fontSize>x-large</fontSize>

   <!--
   ///
   Color Schemes
   ///
   -->
   <colorScheme name="dark-bold">
      <label>Dark (Bold Font)</label>
   </colorScheme>
   <colorScheme name="light-bold">
      <label>Light (Bold Font)</label>
   </colorScheme>
   <colorScheme name="dark-normal">
      <label>Dark (Normal Font)</label>
   </colorScheme>
   <colorScheme name="light-normal">
      <label>Light (Normal Font)</label>
   </colorScheme>
   <colorScheme name="user-created_pocket-dmg">
      <label>Pocket DMG</label>
   </colorScheme>
   <colorScheme name="user-created_pocket-micro">
      <label>Pocket Micro</label>
   </colorScheme>
   <colorScheme name="user-created_amber-terminal">
      <label>Amber Terminal</label>
   </colorScheme>
   <colorScheme name="user-created_green-terminal">
      <label>Green Terminal</label>
   </colorScheme>
   <colorScheme name="user-created_cyberpunk">
      <label>Cyberpunk</label>
   </colorScheme>
   <colorScheme name="user-created_fallout">
      <label>Fallout (by Rob Zombie)</label>
   </colorScheme>
   <colorScheme name="user-created_gameboy-dmg">
      <label>Game Boy DMG (by Rob Zombie)</label>
   </colorScheme>
   <colorScheme name="custom">
      <label>Custom</label>
   </colorScheme>

   <!--
   ///
   Transitions
   ///
   -->
   <transitions name="transitions">
      <label>transitions</label>
      <selectable>false</selectable>
      <systemToSystem>instant</systemToSystem>
      <systemToGamelist>instant</systemToGamelist>
      <gamelistToGamelist>instant</gamelistToGamelist>
      <gamelistToSystem>instant</gamelistToSystem>
      <startupToSystem>instant</startupToSystem>
      <startupToGamelist>instant</startupToGamelist>
   </transitions>
   <suppressTransitionProfiles>
      <entry>builtin-fade</entry>
   </suppressTransitionProfiles>

   <!--
   ///
   Variants
   ///
   -->
   <variant name="gamelist-list">
      <label>List</label>
      <selectable>true</selectable>
   </variant>
   <variant name="gamelist-list-cover">
      <label>List + Boxart</label>
      <selectable>true</selectable>
      <override>
         <trigger>noMedia</trigger>
         <mediaType>cover</mediaType>
         <useVariant>gamelist-list</useVariant>
      </override>
   </variant>
   <variant name="gamelist-list-screenshot">
      <label>List + Screenshot</label>
      <selectable>true</selectable>
      <override>
         <trigger>noMedia</trigger>
         <mediaType>screenshot</mediaType>
         <useVariant>gamelist-list</useVariant>
      </override>
   </variant>

</themeCapabilities>
<!-- 
4:3 aspect ratio
based on 640x480
-->
<theme>

   <!--
   ///
   All Views
   ///
   -->
   <view name="
      system,
      gamelist
      ">
      <image name="
         background
         ">
         <path>${backgroundPath-4-3}</path>
         <cropPos>${backgroundCropPos-4-3}</cropPos>
      </image>
      <systemstatus name="
         system-status
         ">
         <pos>0.928125 0.09166667</pos><!-- 594 44 -->
         <backgroundHorizontalPadding>0.021875 0.021875</backgroundHorizontalPadding><!-- 14 14 -->
         <backgroundVerticalPadding>0.01875 0.01875</backgroundVerticalPadding><!-- 9 9 -->
      </systemstatus>
      <textlist name="
         item-list
         ">
         <pos>0.071875 0.075</pos><!-- 46 36 -->
         <selectedBackgroundMargins>0.021875 0.021875</selectedBackgroundMargins><!-- 14 -->
      </textlist>
      <helpsystem name="
         help-system-view-left,
         help-system-view-right,
         help-gamelist-view-left,
         help-gamelist-view-right
         ">
         <entrySpacing>0.021875</entrySpacing><!-- 14 -->
         <iconTextSpacing>0.0125</iconTextSpacing><!-- 8 -->
         <backgroundHorizontalPadding>0.015625 0.0234375</backgroundHorizontalPadding><!-- 10 15 -->
         <backgroundVerticalPadding>0.01666667 0.01666667</backgroundVerticalPadding><!-- 8 8 -->
      </helpsystem>
      <helpsystem name="
         help-system-view-left,
         help-gamelist-view-left
         ">
         <pos>0.065625 0.904166666666667</pos><!-- 42 434 -->
      </helpsystem>
      <helpsystem name="
         help-system-view-right,
         help-gamelist-view-right
         ">
         <pos>0.9265625 0.904166666666667</pos><!-- 593 434 -->
      </helpsystem>
      <helpsystem name="
         help-system-view-left
         ">
         <entries>${helpSystemViewEntriesLeft}</entries>
      </helpsystem>
      <helpsystem name="
         help-system-view-right
         ">
         <entries>${helpSystemViewEntriesRight}</entries>
      </helpsystem>
      <helpsystem name="
         help-gamelist-view-left
         ">
         <entries>${helpGamelistViewEntriesLeft}</entries>
      </helpsystem>
      <helpsystem name="
         help-gamelist-view-right
         ">
         <entries>${helpGamelistViewEntriesRight}</entries>
      </helpsystem>
   </view>
   <fontSize name="
      small,
      x-small
      ">
      <variables>
         <helpSystemViewEntriesLeft>start,x</helpSystemViewEntriesLeft>
         <helpSystemViewEntriesRight>a</helpSystemViewEntriesRight>
         <helpGamelistViewEntriesLeft>back,start</helpGamelistViewEntriesLeft>
         <helpGamelistViewEntriesRight>a</helpGamelistViewEntriesRight>
      </variables>
   </fontSize>
   <fontSize name="
      medium
      ">
      <variables>
         <helpSystemViewEntriesLeft>start,x</helpSystemViewEntriesLeft>
         <helpSystemViewEntriesRight>a</helpSystemViewEntriesRight>
         <helpGamelistViewEntriesLeft>back,start</helpGamelistViewEntriesLeft>
         <helpGamelistViewEntriesRight>a</helpGamelistViewEntriesRight>
      </variables>
   </fontSize>
   <fontSize name="
      large,
      x-large
      ">
      <variables>
         <helpSystemViewEntriesLeft>start,x</helpSystemViewEntriesLeft>
         <helpSystemViewEntriesRight>a</helpSystemViewEntriesRight>
         <helpGamelistViewEntriesLeft>back,start</helpGamelistViewEntriesLeft>
         <helpGamelistViewEntriesRight>a</helpGamelistViewEntriesRight>
      </variables>
   </fontSize>

   <!--
   ///
   System View
   ///
   -->
   <view name="
      system
      ">
      <textlist name="
         item-list
         ">
         <size>0.85625 0.733333333333333</size><!-- 548 352 -->
      </textlist>
   </view>

   <!--
   ///
   Gamelist View
   ///
   -->
   <!-- Variants: List -->
   <variant name="
      gamelist-list
      ">
      <view name="
         gamelist
         ">
         <textlist name="
            item-list
            ">
            <size>0.85625 0.733333333333333</size><!-- 548 352 -->
         </textlist>
      </view>
   </variant>
   <variant name="
      gamelist-list-cover,
      gamelist-list-screenshot,
      gamelist-list-titlescreen,
      gamelist-list-physicalmedia,
      gamelist-list-miximage,
      gamelist-list-marquee
      ">
      <view name="
         gamelist
         ">
         <textlist name="
            item-list
            ">
            <size>0.4 0.733333333333333</size><!-- 256 352 -->
         </textlist>
         <video name="
            game-art
            ">
            <pos>0.928125 0.50625</pos><!-- 594 243 -->
            <maxSize>0.3625 0.60416667</maxSize><!-- 232 290 -->
         </video>
      </view>
   </variant>

</theme>
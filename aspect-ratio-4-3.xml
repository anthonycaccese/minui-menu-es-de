<!-- 
4:3 aspect ratio
based on 640x480
-->
<theme>

   <!--
   ///
   All Views
   ///
   -->
   <view name="
      system,
      gamelist
      ">
      <image name="
         background
         ">
         <path>${backgroundPath-4-3}</path>
         <cropPos>${backgroundCropPos-4-3}</cropPos>
      </image>
      <systemstatus name="
         system-status
         ">
         <pos>0.928125 0.09166667</pos><!-- 594 44 -->
         <backgroundPadding>0.04375 0.0375</backgroundPadding><!-- 28 18 -->
      </systemstatus>
      <textlist name="
         item-list
         ">
         <pos>0.071875 0.075</pos><!-- 46 36 -->
         <selectedBackgroundMargins>0.021875 0.021875</selectedBackgroundMargins><!-- 14 -->
      </textlist>
      <helpsystem name="
         help-system-view-left,
         help-system-view-right,
         help-gamelist-view-left,
         help-gamelist-view-right
         ">
         <entrySpacing>0.01172333</entrySpacing><!-- 10 -->
         <iconTextSpacing>0.00468933</iconTextSpacing><!-- 4 -->
         <backgroundPadding>0.03282532 0.0375</backgroundPadding><!-- 28 18 -->
      </helpsystem>
      <helpsystem name="
         help-system-view-left,
         help-gamelist-view-left
         ">
         <pos>0.071875 0.904166666666667</pos><!-- 46 434 -->
      </helpsystem>
      <helpsystem name="
         help-system-view-right,
         help-gamelist-view-right
         ">
         <pos>0.928125 0.904166666666667</pos><!-- 594 434 -->
      </helpsystem>
      <helpsystem name="
         help-system-view-left
         ">
         <entries>${helpSystemViewEntriesLeft}</entries>
      </helpsystem>
      <helpsystem name="
         help-system-view-right
         ">
         <entries>${helpSystemViewEntriesRight}</entries>
      </helpsystem>
      <helpsystem name="
         help-gamelist-view-left
         ">
         <entries>${helpGamelistViewEntriesLeft}</entries>
      </helpsystem>
      <helpsystem name="
         help-gamelist-view-right
         ">
         <entries>${helpGamelistViewEntriesRight}</entries>
      </helpsystem>
   </view>
   <fontSize name="
      small,
      x-small
      ">
      <variables>
         <helpSystemViewEntriesLeft>start,x</helpSystemViewEntriesLeft>
         <helpSystemViewEntriesRight>a</helpSystemViewEntriesRight>
         <helpGamelistViewEntriesLeft>back,start</helpGamelistViewEntriesLeft>
         <helpGamelistViewEntriesRight>a</helpGamelistViewEntriesRight>
      </variables>
   </fontSize>
   <fontSize name="
      medium
      ">
      <variables>
         <helpSystemViewEntriesLeft>start,x</helpSystemViewEntriesLeft>
         <helpSystemViewEntriesRight>a</helpSystemViewEntriesRight>
         <helpGamelistViewEntriesLeft>back,start</helpGamelistViewEntriesLeft>
         <helpGamelistViewEntriesRight>a</helpGamelistViewEntriesRight>
      </variables>
   </fontSize>
   <fontSize name="
      large,
      x-large
      ">
      <variables>
         <helpSystemViewEntriesLeft>start,x</helpSystemViewEntriesLeft>
         <helpSystemViewEntriesRight>a</helpSystemViewEntriesRight>
         <helpGamelistViewEntriesLeft>back,start</helpGamelistViewEntriesLeft>
         <helpGamelistViewEntriesRight>a</helpGamelistViewEntriesRight>
      </variables>
   </fontSize>

   <!--
   ///
   System View
   ///
   -->
   <view name="
      system
      ">
      <textlist name="
         item-list
         ">
         <size>0.85625 0.733333333333333</size><!-- 548 352 -->
      </textlist>
   </view>

   <!--
   ///
   Gamelist View
   ///
   -->
   <!-- Variants: List -->
   <variant name="
      gamelist-list
      ">
      <view name="
         gamelist
         ">
         <textlist name="
            item-list
            ">
            <size>0.85625 0.733333333333333</size><!-- 548 352 -->
         </textlist>
      </view>
   </variant>
   <!-- Variants: List: Cover, List: Screenshot -->
   <variant name="
      gamelist-list-cover,
      gamelist-list-screenshot,
      gamelist-list-titlescreen,
      gamelist-list-physicalmedia
      ">
      <view name="
         gamelist
         ">
         <textlist name="
            item-list
            ">
            <size>0.4 0.733333333333333</size><!-- 256 352 -->
         </textlist>
         <video name="
            game-art
            ">
            <pos>0.928125 0.50625</pos><!-- 594 243 -->
            <cropSize>0.3625 0.60416667</cropSize><!-- 232 290 -->
         </video>
      </view>
   </variant>
   <!-- Variants: List: Cover -->
   <variant name="
      gamelist-list-cover,
      gamelist-list-titlescreen,
      gamelist-list-physicalmedia
      ">
      <view name="
         gamelist
         ">
         <video name="
            game-art
            ">
            <imageMaxSize>0.3625 0.60416667</imageMaxSize><!-- 232 290 -->
         </video>
      </view>
   </variant>

</theme>
<!-- 
1:1 aspect ratio
based on 480x480
-->
<theme>

   <!--
   ///
   All Views
   ///
   -->
   <view name="
      system,
      gamelist
      ">
      <image name="
         background
         ">
         <path>${backgroundPath-1-1}</path>
         <cropPos>${backgroundCropPos-1-1}</cropPos>
      </image>
      <systemstatus name="
         system-status
         ">
         <pos>0.925 0.075</pos><!-- 444 36 -->
         <backgroundHorizontalPadding>0.02916667 0.02916667</backgroundHorizontalPadding><!-- 14 14 -->
         <backgroundVerticalPadding>0.01875 0.01875</backgroundVerticalPadding><!-- 9 9 -->
      </systemstatus>
      <textlist name="
         item-list
         ">
         <pos>0.075 0.05833333</pos><!-- 36 28 -->
         <selectedBackgroundMargins>0.029166666666667 0.029166666666667</selectedBackgroundMargins><!-- 14 -->
      </textlist>
      <helpsystem name="
         help-system-view-left,
         help-system-view-right,
         help-gamelist-view-left,
         help-gamelist-view-right
         ">
         <entrySpacing>0.02083333</entrySpacing><!-- 10 -->
         <iconTextSpacing>0.0125</iconTextSpacing><!-- 6 -->
         <backgroundHorizontalPadding>0.02083333 0.03125</backgroundHorizontalPadding><!-- 10 15 -->
         <backgroundVerticalPadding>0.01666667 0.01666667</backgroundVerticalPadding><!-- 8 8 -->
      </helpsystem>
      <helpsystem name="
         help-system-view-left,
         help-gamelist-view-left
         ">
         <pos>0.06666667 0.89583333</pos><!-- 32 430 -->
      </helpsystem>
      <helpsystem name="
         help-system-view-right,
         help-gamelist-view-right
         ">
         <pos>0.92291667 0.89583333</pos><!-- 443 430 -->
      </helpsystem>
      <helpsystem name="
         help-system-view-left
         ">
         <entries>${helpSystemViewEntriesLeft}</entries>
      </helpsystem>
      <helpsystem name="
         help-system-view-right
         ">
         <entries>${helpSystemViewEntriesRight}</entries>
      </helpsystem>
      <helpsystem name="
         help-gamelist-view-left
         ">
         <entries>${helpGamelistViewEntriesLeft}</entries>
      </helpsystem>
      <helpsystem name="
         help-gamelist-view-right
         ">
         <entries>${helpGamelistViewEntriesRight}</entries>
      </helpsystem>
   </view>
   <fontSize name="
      small,
      x-small
      ">
      <variables>
         <helpSystemViewEntriesLeft>start,x</helpSystemViewEntriesLeft>
         <helpSystemViewEntriesRight>a</helpSystemViewEntriesRight>
         <helpGamelistViewEntriesLeft>back,start</helpGamelistViewEntriesLeft>
         <helpGamelistViewEntriesRight>a</helpGamelistViewEntriesRight>
      </variables>
   </fontSize>
   <fontSize name="
      medium
      ">
      <variables>
         <helpSystemViewEntriesLeft>start,x</helpSystemViewEntriesLeft>
         <helpSystemViewEntriesRight>a</helpSystemViewEntriesRight>
         <helpGamelistViewEntriesLeft>back,start</helpGamelistViewEntriesLeft>
         <helpGamelistViewEntriesRight>a</helpGamelistViewEntriesRight>
      </variables>
   </fontSize>
   <fontSize name="
      large,
      x-large
      ">
      <variables>
         <helpSystemViewEntriesLeft>start,x</helpSystemViewEntriesLeft>
         <helpSystemViewEntriesRight>a</helpSystemViewEntriesRight>
         <helpGamelistViewEntriesLeft>back,start</helpGamelistViewEntriesLeft>
         <helpGamelistViewEntriesRight>a</helpGamelistViewEntriesRight>
      </variables>
   </fontSize>

   <!--
   ///
   System View
   ///
   -->
   <view name="
      system
      ">
      <textlist name="
         item-list
         ">
         <size>0.85 0.733333333333333</size><!-- 408 352 -->
      </textlist>
   </view>

   <!--
   ///
   Gamelist View
   ///
   -->
   <!-- Variants: List -->
   <variant name="
      gamelist-list
      ">
      <view name="
         gamelist
         ">
         <textlist name="
            item-list
            ">
            <size>0.85 0.733333333333333</size><!-- 408 352 -->
         </textlist>
      </view>
   </variant>
   <!-- Variants: List: Cover, List: Screenshot -->
   <variant name="
      gamelist-list-cover,
      gamelist-list-screenshot,
      gamelist-list-titlescreen,
      gamelist-list-physicalmedia
      ">
      <view name="
         gamelist
         ">
         <textlist name="
            item-list
            ">
            <size>0.40416667 0.733333333333333</size><!-- 194 352 -->
         </textlist>
         <video name="
            game-art
            ">
            <pos>0.93333333 0.48541667</pos><!-- 448 233 -->
            <cropSize>0.34166667 0.60416667</cropSize><!-- 164 290 -->
         </video>
      </view>
   </variant>
   <!-- Variants: List: Cover -->
   <variant name="
      gamelist-list-cover,
      gamelist-list-titlescreen,
      gamelist-list-physicalmedia
      ">
      <view name="
         gamelist
         ">
         <video name="
            game-art
            ">
            <imageMaxSize>0.34166667 0.60416667</imageMaxSize><!-- 164 290 -->
         </video>
      </view>
   </variant>

</theme>